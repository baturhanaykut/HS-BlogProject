@model List<PostVM>

@{
    ViewData["Title"] = "Index";
}


<div class="col-md-12">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">List of Post</h3>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr style="text-align: center">
                        <th>Id</th>
                        <th>Title</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Content</th>
                        <th>Genre Name</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.AuthorFirstName</td>
                            <td>@item.AuthorLastName</td>
                            <td>@item.Content</td>
                            <td>@item.GenreName</td>
                            <td><img src="@item.ImagePath" class="rounded mx-auto d-block" width="150" height="150" /></td>
                            <td>
                                <a asp-area="Admin" asp-controller="Post" asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Update</a>
                                <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                                <a asp-area="Admin" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a asp-action="Create" class="btn btn-block btn-dark">Create Post</a>  
        </div>
    </div>
</div>


