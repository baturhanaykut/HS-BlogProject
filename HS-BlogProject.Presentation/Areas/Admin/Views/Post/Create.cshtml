@model CreatePostDTO
@{
    ViewData["Title"] = "Create";
}

<div class="col-md-8 offset-2">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Create Post</h3>
        </div>
        <form asp-area="Admin" asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="card-body">

             @*   <div class="form-group">
                    <label asp-for="UploadPath" class="form-control">Select Image</label>
                    <input asp-for="UploadPath" class="form-control" type="file">
                </div>*@

                <div class="form-group">
                    <label asp-for="UploadPath">Select Image</label>
                    <div class="input-group">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" asp-for="UploadPath">
                            <label class="custom-file-label" asp-for="UploadPath">Choose file</label>
                        </div>
                        @*<div class="input-group-append">
                            <span class="input-group-text">Upload</span>
                        </div>*@
                    </div>

                <div class="form-group">
                    <label asp-for="Title" class="form-control">@Html.DisplayNameFor(x=>x.Title)</label>
                    <input class="form-control" placeholder="Title" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Content" class="form-control"></label>
                    <textarea asp-for="Content" class="form-control" placeholder=" Enter Contet">@Html.DisplayNameFor(x=>x.Content)</textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GenreId" class="form-control" >@Html.DisplayNameFor(x=>x.GenreId)</label>
                    <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.Genre">
                        <option>Plases Select Genre </option>
                    </select>
                    <span asp-validation-for="GenreId" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="AuthorId" class="form-control">@Html.DisplayNameFor(x=>x.AuthorId)</label>
                    <select asp-for="AuthorId" class="form-control" asp-items="@ViewBag.Author">
                        <option>Plases Select Author </option>
                    </select>
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>



                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-primary btn-sm float-end mr-2">Back to Post List</a>
                    <input type="submit" class="btn btn-success btn-sm float-end mr-2" value="Create Post" />
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />


@section Scripts{
    <!-- bs-custom-file-input -->
    <script src="~/media/js/bs-custom-file-input.min.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            bsCustomFileInput.init();
        });
    </script>
}